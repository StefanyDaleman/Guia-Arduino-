int AzulLED = 12;
int GrisLED = 8;
int CafeLED = 4; 
int AmarilloLED = 2; 
int tiempo = 1000;
 
void setup() {
 pinMode(AzulLED,OUTPUT);
 pinMode(GrisLED,OUTPUT);
 pinMode(CafeLED,OUTPUT);
 pinMode(AmarilloLED,OUTPUT);

}

void loop() {
  
/*0000*/
digitalWrite(AzulLED,LOW);
delay(tiempo);
digitalWrite(GrisLED,LOW);
delay(tiempo);
digitalWrite(CafeLED,LOW);
delay(tiempo);
digitalWrite(AmarilloLED,LOW);
delay(tiempo);

/*0001*/
digitalWrite(AmarilloLED,HIGH);
delay(tiempo);
digitalWrite(AmarilloLED,LOW);
delay(tiempo);

/*0010*/
digitalWrite(CafeLED,HIGH);
delay(tiempo);
digitalWrite(CafeLED,LOW);
delay(tiempo);

/*0011*/

digitalWrite(CafeLED,HIGH);
digitalWrite(AmarilloLED,HIGH);
delay(tiempo);
digitalWrite(CafeLED,LOW);
digitalWrite(AmarilloLED,LOW);
delay(tiempo);


/*0100*/
digitalWrite(GrisLED,HIGH);
delay(tiempo);
digitalWrite(GrisLED,LOW);
delay(tiempo);

/*0101*/
digitalWrite(GrisLED,HIGH);
digitalWrite(AmarilloLED,HIGH);
delay(tiempo);
digitalWrite(GrisLED,LOW);
digitalWrite(AmarilloLED,LOW);
delay(tiempo);

/*0110*/
digitalWrite(CafeLED,HIGH);
digitalWrite(GrisLED,HIGH);
delay(tiempo);
digitalWrite(CafeLED,LOW);
digitalWrite(GrisLED,LOW);
delay(tiempo);

/*0111*/
digitalWrite(GrisLED,HIGH);
digitalWrite(CafeLED,HIGH);
digitalWrite(AmarilloLED,HIGH);
delay(tiempo);
digitalWrite(GrisLED,LOW);
digitalWrite(CafeLED,LOW);
digitalWrite(AmarilloLED,LOW);
delay(tiempo);

/*1000*/
digitalWrite(AzulLED,HIGH);
delay(tiempo);
digitalWrite(AzulLED,LOW);
delay(tiempo);

/*1001*/
digitalWrite(AzulLED,HIGH);
digitalWrite(AmarilloLED,HIGH);
delay(tiempo);
digitalWrite(AzulLED,LOW);
digitalWrite(AmarilloLED,LOW);
delay(tiempo);

/*1010*/

digitalWrite(AzulLED,HIGH);
digitalWrite(CafeLED,HIGH);
delay(tiempo);
digitalWrite(AzulLED,LOW);
digitalWrite(CafeLED,LOW);
delay(tiempo);

/*1011*/
digitalWrite(AzulLED,HIGH);
digitalWrite(CafeLED,HIGH);
digitalWrite(AmarilloLED,HIGH);
delay(tiempo);
digitalWrite(AzulLED,LOW);
digitalWrite(CafeLED,LOW);
digitalWrite(AmarilloLED,LOW);
delay(tiempo);

/*1100*/
digitalWrite(AzulLED,HIGH);
digitalWrite(GrisLED,HIGH);
delay(tiempo);
digitalWrite(AzulLED,LOW);
digitalWrite(GrisLED,LOW);
delay(tiempo);

/*1101*/
digitalWrite(AzulLED,HIGH);
digitalWrite(GrisLED,HIGH);
digitalWrite(AmarilloLED,HIGH);
delay(tiempo);
digitalWrite(AzulLED,LOW);
digitalWrite(GrisLED,LOW);
digitalWrite(AmarilloLED,LOW);
delay(tiempo);

/*1110*/
digitalWrite(AzulLED,HIGH);
digitalWrite(GrisLED,HIGH);
digitalWrite(CafeLED,HIGH);
delay(tiempo);
digitalWrite(AzulLED,LOW);
digitalWrite(GrisLED,LOW);
digitalWrite(CafeLED,LOW);
delay(tiempo);

/*1111*/

digitalWrite(AzulLED,HIGH);
digitalWrite(GrisLED,HIGH);
digitalWrite(CafeLED,HIGH);
digitalWrite(AmarilloLED,HIGH);
delay(tiempo);
digitalWrite(AzulLED,LOW);
digitalWrite(GrisLED,LOW);
digitalWrite(CafeLED,LOW);
digitalWrite(AmarilloLED,LOW);
delay(tiempo);

}
